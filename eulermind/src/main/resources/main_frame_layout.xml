<frame name="mainframe" title="EulerMind" layout="BorderLayout" size="800,600"  >

    <menubar name="menubar">
        <menu text="导图" id="m_mindMapMenu" mnemonic="VK_M"/>
        <menu text="导入" id="m_importMenu" mnemonic="VK_I">
            <menuitem id="mi_import" text="Import ..." Action="m_importAction"/>
        </menu>
        <menu text="收藏" id="m_favoriteMenu" mnemonic="VK_F"/>
        <menu text="归属" id="m_ancestorMenu" mnemonic="VK_A"/>

        <menu text="选项" mnemonic="VK_O" >
            <checkboxmenuitem id="m_searchWhileAddingNodeCheckMenu" text="实时搜索" Selected="true"/>
            <separator/>
            <checkboxmenuitem id="m_propertyToolBarVisibleCheckMenu" text="属性工具栏"  Selected="true"/>
        </menu>

    </menubar>

    <vbox constraints="BorderLayout.NORTH" >
        <toolBar floatable="false" autoscrolls="true"  id="m_propertyToolBar" preferredSize="0, 30" orientation="HORIZONTAL">
            <label labelfor="m_fontFamilyCombobox" text="字体"/>
            <fontFamilyCombobox id="m_fontFamilyCombobox"/>

            <separator/>

            <label labelfor="m_fontSizeCombobox" text="字号"/>
            <fontSizeCombobox id="m_fontSizeCombobox"/>

            <separator/>

            <label labelfor="m_italicCombobox" text="斜体"/>
            <booleanCombobox id="m_italicCombobox"/>

            <separator/>

            <label labelfor="m_boldCombobox" text="粗体"/>
            <booleanCombobox id="m_boldCombobox"/>

            <separator/>

            <label labelfor="m_textColorCombobox" text="字体色"/>
            <colorCombobox id="m_textColorCombobox" text="T" Font="COURIER-BOLD-14"/>

            <separator/>

            <label labelfor="m_nodeColorCombobox" text="节点色"/>
            <colorCombobox id="m_nodeColorCombobox" text="T" Font="COURIER-BOLD-14"/>


            <label labelfor="m_iconButton" text="图标"/>
            <iconbutton id="m_iconButton" />

        </toolBar>

        <toolBar floatable="false" autoscrolls="true"  preferredSize="0, 30" orientation="HORIZONTAL">
            <label labelfor="m_searchInputer" text="搜索"/>
            <mindEditor id="m_searchInputer" columns="10"/>
        </toolBar>


    </vbox>

    <vbox constraints="BorderLayout.EAST"  preferredSize="100, 0">
        <label text="样式"/>

        <scrollPane  preferredSize="100, 10000">
            <styleList id="m_styleList"/>
        </scrollPane>


        <panel Layout="GridLayout(0,2)"  preferredSize="100, 10">
        <button text="新建" id="m_styleNewButton"/>
        <button text="删除" id="m_styleDeletingButton"/>
        <button text="编辑" id="m_styleEditingButton"/>
        </panel>

        <panel Layout="GridLayout(0,2)"   preferredSize="100, 10">
            <button text="上移" id="m_styleUpButton"/>
            <button text="下移" id="m_styleDownButton"/>
        </panel>
    </vbox>


    <tabbedPane id="m_tabbedPane" constraints="BorderLayout.CENTER"/>

</frame>