<frame name="mainframe" title="EulerMind" layout="BorderLayout" size="800,600"  >

    <menubar name="menubar">
        <menu name="filemenu" text="File" mnemonic="VK_F" >
            <menuitem id="mi_open" text="Open" mnemonic="VK_O" />
            <menuitem id="mi_import" text="Import" mnemonic="VK_I" Action="m_importAction"/>
        </menu>
        <menu text="Favorite" id="m_favoriteMenu"/>
        <menu text="Ancestor" id="m_ancestorMenu"/>

    </menubar>

    <toolBar floatable="false" constraints="BorderLayout.NORTH" autoscrolls="true"  preferredSize="0, 30"
             orientation="HORIZONTAL">
        <fontFamilyCombobox id="m_fontFamilyCombobox"/>
        <separator/>
        <fontSizeCombobox id="m_fontSizeCombobox"/>
        <separator/>

        <booleanCombobox id="m_italicCombobox"/>
        <booleanCombobox id="m_boldCombobox"/>
        <separator/>


        <colorCombobox id="m_textColorCombobox" text="T" Font="COURIER-BOLD-14"/>
        <colorCombobox id="m_nodeColorCombobox" text="T" Font="COURIER-BOLD-14"/>

        <iconbutton id="m_iconButton" />

        <separator/>
        <mindEditor id="m_searchInputer" columns="10"/>
    </toolBar>

    <vbox constraints="BorderLayout.EAST"  preferredSize="100, 0">
        <scrollPane  preferredSize="100, 10000">
            <styleList id="m_styleList"/>
        </scrollPane>

        <checkbox text="enable style list" id="m_checkboxForEnableStyleList"/>

        <panel Layout="GridLayout(0,2)"  preferredSize="100, 10">
        <button text="new" id="m_styleNewButton"/>
        <button text="delete" id="m_styleDeletingButton"/>
        <button text="edit" id="m_styleEditingButton"/>
        </panel>

        <panel Layout="GridLayout(0,2)"   preferredSize="100, 10">
            <button text="up" id="m_styleUpButton"/>
            <button text="down" id="m_styleDownButton"/>
        </panel>
    </vbox>


    <tabbedPane id="m_tabbedPane" constraints="BorderLayout.CENTER"/>

</frame>